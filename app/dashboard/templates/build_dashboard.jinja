{% extends "base.jinja" %}

{% block page_title %}{{ product.title }}: LSST the Docs Builds{% endblock page_title %}
{% block page_description %}Build dashboard for {{ product.published_url }}.{% endblock page_description %}

{% block body %}

<div class="dashboard-container">

  <header class="dashboard-header">
    <h1 class="dashboard-header__product-name">{{ product.title }}</h1>

    <p class="dashboard-header__subtitle">Builds</p>
  </header>

  {% if builds %}
  <ul class="inventory-list">
    {% for item in builds %}
    <li class="inventory-list__item">{% include "_build_item.jinja" %}</li>
    {% endfor %}
  </ul>
  {% endif %}

</div>

{% endblock body %}
